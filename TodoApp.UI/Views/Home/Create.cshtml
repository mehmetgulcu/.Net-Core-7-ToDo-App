@model WorkCreateDto

<html>
    <head>
        <title>ToDo App</title>
    </head>
    <body>
        <div class="container my-2">
            <form asp-action="Create" asp-controller="Home" method="post">
                <div class="mb-3">
                    <label>İş Tanımı:</label>
                    <input class="form-control" placeholder="İş tanımı giriniz..." asp-for="@Model.Definition"/>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="@Model.IsCompleted"/>
                    <label class="form-check-label" for="IsCompleted">Tamamlandı mı ?</label>
                </div>
                <hr />
                <div class="mb-3">
                    <button class="btn btn-outline-primary col-md-12" type="submit">Kaydet</button>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </form>
        </div>
    </body>
</html>