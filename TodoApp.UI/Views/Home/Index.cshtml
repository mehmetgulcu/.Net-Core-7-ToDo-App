@model List<WorkListDto>

<html>
    <head>
        <title>ToDo App</title>
    </head>
    <body>
        <div class="container my-2">
            <a class="btn btn-info" asp-action="Create" asp-controller="Home">Yeni iş ekle</a>
            <hr />
            <table class="table table-bordered border-primary">
                <thead>
                    <tr>
                        <th>İş</th>
                        <th>Durumu</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Definition</td>
                        @if(item.IsCompleted == true)
                        {
                            <td class="text-success fw-bold">Tamamlandı</td>
                        }else
                        {
                             <td class="text-danger fw-bold">Tamamlanmadı</td>
                        }
                        <td>
                            <a class="btn btn-outline-warning" asp-action="Update" asp-controller="Home" asp-route-id="@item.Id">Güncelle</a>
                            <a class="btn btn-outline-danger" asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
            </table>
        </div>
    </body>
</html>